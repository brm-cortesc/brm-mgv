//- include ../../includes/mixins

header-admin

section.container-fluid.container-propuestas
	div.row.row-create
		//Crear clientes
		a.btn.btn-blue((click)="toggleClass()", [class.active]="activeS") Nuevo Slider

		article.client-create( [class.active]="activeS")
			form-slider([idSlider]="",(insertSlider)="insertSlider($event)",*ngIf="activeS")
		///-Crear clientes

	//Listado de clientes BRM
	div.row.row-client-list

		//Cliente	
		div(*ngFor="let slider of sliders; let keySlider = index")
			//- article.client.client-item
			article.col-box
				div.box
					div.box-header
						img( src="assets/images/slides/{{slider.imgThumb}}", alt="{{slider.imgThumb}}")
					div.box-content
						h3 {{slider.titulo}}

						a((click)="goToSlider(slider.id)"): i.glyphicon.glyphicon-edit Editar

						a((click)="removeSlider(slider.id)"): i.glyphicon.glyphicon-remove Borrar
			
				///-Usuario por marca

			div([ngClass]="{'clearfix': ((keySlider+1) % 3) == 0}")
		
		///-Cliente

	///-Listado de clientes BRM
	alert-toast
