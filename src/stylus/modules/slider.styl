.slide
	position relative
	
	&-text
		bottom 0
		gradient-vertical( rgba(0,0,0,0), rgba(0,0,0,0.8),0%, 60%)
		left 0
		padding 0.5rem 1rem 2.5rem
		position absolute
		width 100%
		
		h4
			color white
			font-size 1.6rem
		
	&-img
		
		img
			img-responsive(block)
			transitionBase()
			width 100%

.slick

			
	&-dots
			bottom 0
			left 50%
			list-style-type none
			margin 0 auto
			padding 0
			position absolute
			text-align center
			transform translateX(-@left)
			
			li
				display inline-block
				margin 0.5rem
				
				button 
					background-color white
					border 2px solid white
					circ(1.8rem)
					overflow hidden
					padding 0
					text-indent -9999px
					transitionBase()
					
					&:active,
					&:focus
						outline 0
						outline none
				
				&.slick-active
					button 
						background-color $rojo
			
	

@media (min-width:$screen-sm)
	.slide
		&-text
			padding 0.5rem 1rem 3.5rem
			
			h4
				font-size 2rem
				
		&-img
			img
				height 50.1rem
				object-fit(cover)
		
@media (min-width:830px)
	.slide
		&-img
			img
				height 50.4rem
				

@media (min-width:930px)
