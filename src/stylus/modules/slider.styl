.slide
	&-img
		
		img
			img-responsive(block)
			transitionBase()
			width 100%

.slick

			
	&-dots
			bottom 0
			left 50%
			list-style-type none
			margin 0 auto
			padding 0
			position absolute
			text-align center
			transform translateX(-@left)
			
			li
				display inline-block
				margin 0.5rem
				
				button 
					background-color white
					border 2px solid white
					circ(1.8rem)
					overflow hidden
					padding 0
					text-indent -9999px
					transitionBase()
					
					&:active,
					&:focus
						outline 0
						outline none
				
				&.slick-active
					button 
						background-color $rojo
			
	

@media (min-width:$screen-sm)
	.slide
		&-img
			img
				height 50.1rem
				object-fit(cover)
		
@media (min-width:830px)
	.slide
		&-img
			img
				height 50.4rem
				

@media (min-width:930px)
	.slide
		&-img
			img
				height 48.4rem
				
@media (min-width:990px)
	.slide
		&-img
			img
