&::selection /* WebKit/Blink Browsers */
	background $rojo
	color #fff
	text-shadow 0px 0px 5px rgba(255, 255, 255, .75)

&::-moz-selection /* Gecko Browsers */
	background $rojo
	color #fff
	text-shadow 0px 0px 5px rgba(255, 255, 255, .75)
	


a
	color $azul
	text-decoration none
	transitionBase()
	
	&:hover
		text-decoration underline
		
	img
		border 0
	
body
	background-color lighten($gris, 55%)
	color black
	font-family $font-stack
	font-size 1.4rem
	path('layout/pattern.png')
	

h1, h2, h3, h4, h5, h6
	font-weight $bold
	
strong, b
	font-weight $bold



