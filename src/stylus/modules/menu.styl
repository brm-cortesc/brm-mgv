.menu
	background-color #fff
	height 100%
	padding 0 1rem
	position fixed
	right -100%
	text-align center
	top 0
	transitionBase()
	width 100%
	z-index 10
	
	&.active
		right 0
	

	&-list
		list-style-type none
		padding 0
		

		li
			border-bottom 1px solid $gris
			text-align center
			
			
			a
				color black
				display block
				font-weight $light
				padding 1rem 2rem
				text-align center
				

			&:hover,
			&.active
				a
					background-color $azul
					color white
					

	.container-menu
		left 5%
		position absolute
		top 50%
		transform translateY(-50%)
		width 90%
		

@media (min-width:520px)
	.menu
		&-list
			li
				a
					padding 2rem


@media (min-width:$screen-sm)
	.menu
		height auto
		padding 0
		position static
		right auto
		top auto
		
		.container-menu
			left auto
			position static
			top auto
			transform none
			width auto
			
		&-list
			float left
			margin 2.8rem auto
			width (8.3%*8)

			li
				border-bottom none
				border-right 1px solid black
				float left
				
				
				a
					padding 0.5rem 1rem
					
				&:nth-last-of-type(1)
					border-right-color transparent
					
		.social-list
			float left
			margin 2.8rem auto
			width (8.3%*4)
			
			li
				a
					cuadrado(3rem)
					font-size 1.5rem
					line-height 1.2
					

@media (min-width:830px)
	.menu
		&-list
			margin 3.8rem auto
			
			li 
				a
					padding 0.5rem 1.4rem
					
		.social-list
			margin 3.8rem auto
			

@media (min-width:860px)
	.menu
		&-list			
			li 
				a
					padding 0.5rem 1.5rem
					
@media (min-width:910px)
	.menu
		&-list			
			li 
				a
					padding 0.5rem 1.8rem
					

@media (min-width:980px)
	.menu
		&-list
			margin 4.8rem auto

			li 
				a
					padding 0.5rem 2.2rem
		
		.social-list
			margin 4.2rem auto
			
			li
				a
					cuadrado(3.6rem)
					font-size 2rem


@media (min-width:1024px)
	.menu
		&-list
			
			li 
				a
					padding 0.5rem 2.5rem

@media (min-width:1200px)
	.menu
		&-list			
			li
				a
					padding 0.5rem 3.3rem
