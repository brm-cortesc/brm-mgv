//- include ../../includes/mixins

header-admin

section.container-fluid.container-propuestas
	div.row.row-create
		//Crear clientes
		a.btn.btn-blue((click)="toggleClass()", [class.active]="activeS") Nueva Noticia

		article.client-create( [class.active]="activeS")
			form-noticia([idNoticia]="",(insertNoticia)="insertNoticia($event)",*ngIf="activeS")
		///-Crear clientes

	//Listado de clientes BRM
	div.row.row-client-list

		//Cliente	
		div(*ngFor="let noticia of noticias; let keyCliente = index")
			//- article.client.client-item
			article.col-box
				div.box
					div.box-header
						img( src="assets/images/noticias/{{noticia.imgThumb}}", alt="{{noticia.imgThumb}}")
					div.box-content
						h3 {{noticia.titulo}}

						a((click)="goToNoticia(noticia.id)"): i.glyphicon.glyphicon-edit Editar

						a((click)="removeNoticia(noticia.id)"): i.glyphicon.glyphicon-remove Borrar
			
				///-Usuario por marca

			div([ngClass]="{'clearfix': ((keyCliente+1) % 3) == 0}")
		
		///-Cliente

	///-Listado de clientes BRM
	alert-toast
